{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "build"
  },
  "include": ["src/*/*", "src/utils/*", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "build"]
}
